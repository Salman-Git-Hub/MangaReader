<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InfoActivity">

    <ImageView
        android:id="@+id/info_cover"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

    </ImageView>

    <TextView
        android:id="@+id/info_title"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/info_cover"
        android:singleLine="false"
        android:text="Manga Name"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/info_alternative"
        android:layout_toRightOf="@+id/info_cover"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="64dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Alternative Name"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        android:textStyle="italic"
        android:textSize="18sp">

    </TextView>
    <TextView
        android:id="@+id/info_author"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/info_cover"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Authors"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:textColor="@color/white">

    </TextView>
    <TextView
        android:id="@+id/info_genre"
        android:layout_marginTop="117dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/info_cover"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Gener"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        android:textSize="18sp">

    </TextView>
    <TextView
        android:id="@+id/info_status"
        android:layout_marginTop="144dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/info_cover"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAlignment="viewStart">

    </TextView>

    <TextView
        android:id="@+id/plot"
        android:layout_below="@+id/info_status"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plot"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/info_plot"
        android:layout_below="@+id/plot"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plot text"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAlignment="viewStart">

    </TextView>
    <TextView
        android:id="@+id/chapters"
        android:layout_below="@+id/info_plot"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapters"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold">

    </TextView>
    <ListView
        android:id="@+id/info_chapters"
        android:layout_below="@+id/chapters"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

    </ListView>



</RelativeLayout>